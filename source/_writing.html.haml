%section.hiddable
  %h2#writing
    %span{class: 'icon-pencil2'}
    = t(:writing)
    %span{class: 'icon-chevron-down right'}

  -# Start hidden part
  #writing.unit.hidden.hiddable_content
    = text(:writing_intro)
    %ul.blog
      - blog_posts.each do |post|
        %li
          %span{class: 'icon-rss'} &nbsp;
          = "#{post.pubDate.strftime('%d/%m/%Y')} - "
          %a{href: post.link}>= post.title
    = text(:writing_content)
