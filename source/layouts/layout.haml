!!!
%html
  %head
    %link{rel: 'stylesheet', href: '/css/style.css', type: 'text/css'}
    %link{rel: 'icon', type: 'image/png', href: '/images/favicon.png'}
    %meta{charset: 'UTF-8'}
    %meta{name: 'viewport', content: 'width=device-width, user-scalable=no'}
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:site" content="@picandocodigo"/>
    %meta{name: 'twitter:title', content: t(:title)}
    %meta{name: 'twitter:description', content: t(:description)}
    <meta name="twitter:creator" content="@picandocodigo"/>
    %meta{name: 'twitter:image:src', content: 'https://fernandobriano.com/' + image_path('og-image.jpg')}
    <meta name="twitter:domain" content="https://fernandobriano.com"/>
    <!-- Open Graph -->
    %meta{name: 'og:title', content: t(:title)}
    %meta{name: 'og:description', content: t(:description)}
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://fernandobriano.com" />
    %meta{name: 'og:image', content: 'https://fernandobriano.com/' + image_path('og-image.jpg')}

    %title
      Fernando Briano
  %body
    .grid#main
      .col-1-2
        %h1 Fernando Briano
      .col-1-2
        = partial 'languages', locals: {lang: lang}
      .col-1-1
        = partial 'contact'
      .col-1-1
        = text(:description)
      = yield
      #footer
        =tag :img, src: "/images/pc.png"
        = t(:lastgenerated)
        =time
      / If you're looking at this code, you should know what to do to display this:
    #konami.hidden
      -4.times do
        =tag :img, src: "/images/contra-lives.png"
    #contra.hidden
      %img{src: "/images/contra.gif", title: "REST 30"}
      %script{type: 'text/javascript', src: '/js/all.js'}
