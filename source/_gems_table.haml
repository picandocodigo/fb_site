.gems.grid.grid-pad
  .col-3-12
    .content
      %strong
        %a{href: gem['homepage_uri']}>= gem['name']
  .col-2-12
    .content
      %span{class: 'icon-github'}
      %a{href: gem['homepage_uri'] || gem['source_code_uri'], title: "#{gem['name']} on GitHub"}
        GitHub
      %br
      %span{class: 'icon-ruby'}
      %a{href: gem['project_uri'], title: "#{gem['name']} on RubyGems"}
        RubyGems
  .col-2-12
    .content
      %strong
        Downloads:
        = format_number(gem['downloads'])
  .col-5-12
    .content
      = gem['info']
