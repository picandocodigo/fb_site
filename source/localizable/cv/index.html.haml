#cv
  .col-1-1.center
    %h1 Fernando Briano - Curriculum Vitae
    %p
      = t(:info)
      %br
      = t(:more_info)


  .col-1-1
    %p
      = t(:skills)

  .col-1-1
    %h2
      = t(:work_experience)

    - ["cultivate", "entropia", "freelance", 'datauy', 'craftedcode', 'cultivateprime', 'livepress', 'neo', 'cubox', 'globant', 'citygrid', 'tochos', 'guerwin', 'professor', 'pronet', 'visituruguay'].each do |job|
      .job
        .col-1-3.strong
          = t("#{job}.dates")
        .col-2-3
          .strong
            = t("#{job}.position")
          = t("#{job}.name")
          %br
          = t("#{job}.location")
          .description
            = t("#{job}.description")

  .col-1-1
    %h2
      = t('education.title')

    - ['ort', 'udelar', 'java'].each do |job|
      .job
        .col-1-3.strong
          = t("education.#{job}.dates")
        .col-2-3
          .strong
            = t("education.#{job}.name")
          = t("education.#{job}.degree")
          %br
          .description
            = t("education.#{job}.description")

  .col-1-1
    %h2
      = t('references.title')
    .col-1-1
      = t('references.body')
